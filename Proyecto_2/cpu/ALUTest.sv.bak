module ALUTest;
    logic [31:0] a, b, result;
    logic [2:0] op;
    
    ALU alu(.a(a), .b(b), .op(op), .result(result));
    
    initial begin
        // Inicializar los valores de entrada
        a = 10;
        b = 5;
        
        // Prueba de suma
        op = 3'b000;  // Suma
        #10;
        $display("Operación: Suma");
        $display("a = %d, b = %d", a, b);
        $display("Resultado: %d", result);
        
        // Prueba de resta
        op = 3'b001;  // Resta
        #10;
        $display("Operación: Resta");
        $display("a = %d, b = %d", a, b);
        $display("Resultado: %d", result);
        
        // Prueba de módulo
        op = 3'b010;  // Módulo
        #10;
        $display("Operación: Módulo");
        $display("a = %d, b = %d", a, b);
        $display("Resultado: %d", result);
        
        // Prueba de multiplicación
        op = 3'b011;  // Multiplicación
        #10;
        $display("Operación: Multiplicación");
        $display("a = %d, b = %d", a, b);
        $display("Resultado: %d", result);
        
        // Prueba de división
        op = 3'b100;  // División
        #10;
        $display("Operación: División");
        $display("a = %d, b = %d", a, b);
        $display("Resultado: %d", result);
        
        // Finalizar la simulación
        #10;
        $finish;
    end
endmodule
